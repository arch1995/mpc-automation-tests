{
    "extends": ["@toruslabs/eslint-config-react"],
    "plugins": [],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 11,
      "project": "./tsconfig.json",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "serviceworker": true
    },
    "rules": {
      "react/state-in-constructor": 0,
      "max-len": [2, { "code": 150, "ignoreComments": true }],
      "prettier/prettier": ["error", { "printWidth": 150, "jsxSingleQuote": false, "endOfLine": "auto" }],
      "@typescript-eslint/no-unused-vars": "error",
      "react/button-has-type": "off",
      "react/function-component": "off",
      "no-console": "off",
      "@typescript-eslint/no-use-before-define": "off",
      "no-unused-private-class-members": "off",
      "no-constant-binary-expression": "off",
      "no-plusplus": "off"
    }
}
  